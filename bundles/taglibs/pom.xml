	<packaging>bundle</packaging>
	<name>AEM Tag Library - taglibs</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>

				<configuration>
					<instructions>
						<Export-Package>
							com.aemtaglibs.developer.taglibs.*
						</Export-Package>
						<Import-Package>
							com.squeakysand.sling.taglib,
							javax.jcr,
							javax.jcr.*,
							javax.jws,
							javax.naming,
							org.apache.log4j,
							org.apache.sling.commons.osgi,
