							javax.swing.*,
							javax.xml.*,
							org.apache.commons.*,
							org.apache.sling.api.*,
							org.w3c.dom.xpath.*,
							org.slf4j.*,
							javax.transaction.*,
							org.osgi.*,
							org.osgi.service.component.*,
							org.apache.felix.scr.annotations.*,
							com.day.cq.wcm.*,
							org.apache.sling.scripting.jsp.util.*,
							com.day.text.*
						</Import-Package>
						<Embed-Dependency>*;scope=compile</Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

